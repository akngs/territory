{
  "name": "territory",
  "version": "1.0.0",
  "description": "A simultaneous-action strategy game CLI",
  "type": "module",
  "bin": {
    "territory": "./src/cli.ts"
  },
  "scripts": {
    "start": "node src/cli.ts",
    "check:all": "npm run check:ts && npm test",
    "check:ts": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "game",
    "strategy",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^12.0.0"
  }
}
