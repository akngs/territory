{
  "name": "territory",
  "version": "1.0.0",
  "description": "A simultaneous-action strategy game CLI",
  "type": "module",
  "bin": {
    "territory": "./src/cli.ts"
  },
  "scripts": {
    "start": "node src/cli.ts",
    "check:all": "npm run check:ts && npm run check:eslint && npm run check:format && npm run check:duplication && npm test",
    "check:ts": "tsc --noEmit",
    "check:eslint": "eslint src/**/*.ts",
    "check:format": "prettier --check \"src/**/*.{ts,js,json}\"",
    "check:duplication": "jscpd src",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "game",
    "strategy",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@jscpd/badge-reporter": "^4.0.1",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jscpd": "^4.0.5",
    "prettier": "^3.6.2",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^12.0.0"
  }
}
